<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fra_pro_tvprice"
            android:text="￥39"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#fff04b13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fra_pro_xianzhi"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:padding="5dp"
            android:textSize="15sp"
            android:background="#ffff9904"
            android:text="限制10000人"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/fra_pro_neirong"
        android:text="内容"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fra_pro_iv1"
            android:scaleType="centerInside"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/fra_pro_iv2"
            android:layout_width="80dp"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/fra_pro_iv3"
            android:layout_width="80dp"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:layout_height="80dp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="#ff585858"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fra_pro_zhichi"
            android:text="5人已支持"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/fra_pro_btn"
            android:text="立即支持"
            android:textColor="#fff"
            android:background="#fff64a0b"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        </RelativeLayout>
<TextView
    android:background="#ff585858"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="7dp" />

</LinearLayout>