<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/browding_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#55acef">

        <RelativeLayout
            android:id="@+id/browding_goback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/head_back_icon"
                android:layout_width="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:src="@drawable/backarrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/head_back_icon"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/submit_cancel"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_userinfo_submit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#dfdfdf" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/edit_userinfo_headimage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:clickable="false">

                        <ImageView
                            android:id="@+id/userinfo_headimg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="40dp"
                            android:src="@drawable/ulogin_default_headimg" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="头像"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/userinfo_modify_name"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <EditText
                            android:id="@+id/userinfo_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:gravity="right"
                            android:maxLength="24"
                            android:singleLine="true"
                            android:text=" "
                            android:textColor="#696969"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="昵称"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/usercenter_modify_sex"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="性别"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userinfo_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="38dp"
                            android:text="111"
                            android:textColor="#696969"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/user_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="手机"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/usercenter_level_right"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />

                        <TextView
                            android:id="@+id/user_sj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:gravity="right"
                            android:maxLength="24"
                            android:text="11"
                            android:textColor="#000000"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/edit_email"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="邮箱"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userinfo_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:ellipsize="end"
                            android:maxLength="24"
                            android:text=""
                            android:textColor="#111111"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/user_password"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="登录密码"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/usercenter_level"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:gravity="right"
                            android:maxLength="24"
                            android:text="修改"
                            android:textColor="#55acef"
                            android:textSize="17sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/userinfo_edit_location"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="所在地"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userinfo_location_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:maxLength="24"
                            android:text=""
                            android:textColor="#111111"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userinfo_location_province"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/userinfo_location_city"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/userinfo_location_city"
                            android:textColor="#111111"
                            android:textSize="17sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />

                    <LinearLayout
                        android:id="@+id/edit_userinfo_intro"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/usercenter_info_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="个人介绍"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/userinfo_introduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:background="#00000000"
                            android:paddingBottom="10dp"
                            android:textColor="#111111"
                            android:textSize="17sp" />

                        <EditText
                            android:id="@+id/userinfo_introduction_et"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:paddingBottom="10dp"
                            android:textColor="#111111"
                            android:textSize="17sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="#f2f2f2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#f2f2f2" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="余额"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:gravity="right"
                            android:maxLength="24"
                            android:text="0.00元"
                            android:textColor="#55acef"
                            android:textSize="17sp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />
                    <RelativeLayout
                        android:id="@+id/user_level_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="等级"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/usercenter_level_right1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />
                        <ImageView
                            android:id="@+id/user_levelimg"
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/usercenter_level_right1" />
                    </RelativeLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:background="#f2f2f2" />
                    <RelativeLayout
                        android:id="@+id/user_credits_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip"
                        android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="#ffffff"
                            android:paddingLeft="20dp"
                            android:text="积分"
                            android:textColor="#b0b0b0"
                            android:textSize="17sp" />

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:src="@drawable/personal_information_ico03" />

                        <TextView
                            android:id="@+id/user_credits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:background="#00000000"
                            android:gravity="right"
                            android:maxLength="24"
                            android:text="10"
                            android:textColor="#55acef"
                            android:textSize="17sp" />
                    </RelativeLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#f2f2f2" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>