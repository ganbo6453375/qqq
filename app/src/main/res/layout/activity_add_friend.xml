<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#55acef">
        <RelativeLayout
            android:id="@+id/re_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:src="@drawable/backarrow" />

            <TextView
                android:id="@+id/fanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/image"
                android:background="#55acef"
                android:gravity="center"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/re_return"
            android:text="关闭"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加好友"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="20dp"
        android:background="#dfdfdf" />

    <LinearLayout
        android:id="@+id/add_friends_search_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zengjia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="12"
            android:background="@null"
            android:paddingLeft="17dp"
            android:text="手机号/众筹账号"
            android:textColor="#c2c2c2"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="right|center"
            android:layout_weight="2"
            android:src="@drawable/user_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginBottom="20dp"
        android:background="#dfdfdf" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_address_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friends_icon_address"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="通讯录好友"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="2"
                android:src="@drawable/personal_information_ico03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="17dp"
            android:background="#dfdfdf" />
        <LinearLayout
            android:id="@+id/add_weixin_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friends_icon_weixin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="微信好友"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="2"
                android:src="@drawable/personal_information_ico03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="17dp"
            android:background="#dfdfdf" />
        <LinearLayout
            android:id="@+id/add_qq_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friends_icon_qq"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="QQ好友"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="2"
                android:src="@drawable/personal_information_ico03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="17dp"
            android:background="#dfdfdf" />
        <LinearLayout
            android:id="@+id/add_sina_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friends_icon_sina"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="新浪微博好友"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="2"
                android:src="@drawable/personal_information_ico03" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="17dp"
            android:background="#dfdfdf" />
        <LinearLayout
            android:id="@+id/add_tencent_layout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/add_friends_icon_tencent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="10"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="腾讯微博好友"
                android:textColor="#000000"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="2"
                android:src="@drawable/personal_information_ico03" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>